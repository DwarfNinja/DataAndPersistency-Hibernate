<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <property name="connection.url">jdbc:postgresql://localhost/ovchip</property>
        <property name="connection.username">postgres</property>
        <property name="connection.password">admin</property>

        <!-- Enable this to show queries generated by Hibernate -->
         <property name="show_sql">false</property>
         <property name="format_sql">false</property>

        <mapping class="nl.hu.dp.ovchip.domain.Reiziger"/>
        <mapping class="nl.hu.dp.ovchip.domain.Adres"/>
        <mapping class="nl.hu.dp.ovchip.domain.OVChipkaart"/>
        <mapping class="nl.hu.dp.ovchip.domain.Product"/>
    </session-factory>
</hibernate-configuration>
